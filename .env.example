# Database
DATABASE_URL=postgresql://cachet:cachet@localhost:5432/cachet

# Redis
REDIS_URL=redis://localhost:6379

# Discord
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here

# MegaETH RPC
MEGAETH_RPC_URL=https://rpc.megaeth.com

# JWT
JWT_SECRET=change_this_to_a_random_64_char_string
JWT_REFRESH_SECRET=change_this_to_another_random_64_char_string

# Payment provider: "crypto" (default) or "paddle"
PAYMENT_PROVIDER=crypto
NEXT_PUBLIC_PAYMENT_PROVIDER=crypto

# Crypto payments
CRYPTO_RECIPIENT_WALLET=0xYourWalletAddress
ALCHEMY_API_KEY=your_alchemy_api_key

# Paddle (only needed if PAYMENT_PROVIDER=paddle)
PADDLE_API_KEY=your_paddle_api_key
PADDLE_WEBHOOK_SECRET=pdl_ntfset_xxx
PADDLE_ENVIRONMENT=sandbox
PADDLE_GROWTH_PRICE_ID=pri_xxx_growth
PADDLE_PRO_PRICE_ID=pri_xxx_pro
PADDLE_ENTERPRISE_PRICE_ID=pri_xxx_enterprise

# Bot <-> API shared secret
BOT_API_SECRET=change_this_to_a_random_32_char_string

# Frontend (web app) URL(s) - used for CORS and OAuth redirect
# For multiple origins, provide a comma-separated list.
FRONTEND_URL=http://localhost:3000

# API base URL (used by frontend + bot to call the API)
NEXT_PUBLIC_API_URL=http://localhost:3001
API_URL=http://localhost:3001

# WalletConnect Cloud Project ID (optional)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# MegaETH chain ID (default: testnet)
NEXT_PUBLIC_MEGAETH_CHAIN_ID=6342

# API Server
API_PORT=3001

# Monitoring / Logging
SENTRY_DSN=
LOG_LEVEL=info

# Site URL (used for OpenGraph meta tags)
NEXT_PUBLIC_SITE_URL=https://usecachet.com
